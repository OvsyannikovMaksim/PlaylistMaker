<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainScreenButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="iconTint">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding_10</item>
    </style>

    <style name="AppBarTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="SettingsScreenButtons">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:padding">@dimen/standard_margin</item>
    </style>

    <style name="MyEditTextStyle" parent="Theme.AppCompat.Light">
        <item name="android:textCursorDrawable">@drawable/et_cursor</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TrackTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="placeholderText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="ErrorPlaceholderButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="backgroundTint">@color/inverted_background</item>
        <item name="cornerRadius">@dimen/corner_radius_54</item>
        <item name="android:textColor">@color/inverted_text_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="AudioPlayerTextBase">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="AudioPlayerTextInfo">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingVertical">8dp</item>
    </style>

    <style name="TabTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="TabStyle">
        <item name="tabTextAppearance">@style/TabTextStyle</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabTextColor">@color/text_color</item>
        <item name="tabIndicatorColor">@color/text_color</item>
        <item name="tabBackground">@color/bottom_bar</item>
    </style>


    <style name="BottomNavBar">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="AddPlaylistButton">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="AddPlaylistHint">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="PlaylistTextBase">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="PlaylistTextTitle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>

</resources>