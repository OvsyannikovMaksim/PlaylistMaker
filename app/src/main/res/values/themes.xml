<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.PlayListMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/main_blue</item>
    </style>

    <style name="Theme.PlayListMaker" parent="Base.Theme.PlayListMaker" />

    <style name="Theme.PlayListMaker.MainActivity" parent="Theme.PlayListMaker">
        <item name="android:background">@color/main_blue</item>
    </style>

    <style name="Theme.PlayListMaker.SettingsActivity" parent="Theme.PlayListMaker">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:titleTextColor">@color/black</item>
    </style>

    <style name="Theme.PlayListMaker.SearchActivity" parent="Theme.PlayListMaker">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.PlayListMaker.AudioPlayerActivity" parent="Base.Theme.PlayListMaker">
        <item name="android:background">@color/white</item>
    </style>

    <style name="MyEditTextTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/main_blue</item>
        <item name="colorControlActivated">@color/main_blue</item>
    </style>
</resources>