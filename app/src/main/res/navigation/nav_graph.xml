<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mediaFragment">

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.playlistmaker.settings.ui.SettingsFragment"
        tools:layout="@layout/fragment_settings"
        android:label="SettingsFragment" />

    <fragment
        android:id="@+id/mediaFragment"
        android:name="com.example.playlistmaker.media.ui.MediaFragment"
        tools:layout="@layout/fragment_media"
        android:label="MediaFragment" >
        <action
            android:id="@+id/action_mediaFragment_to_addPlaylistFragment"
            app:destination="@id/addPlaylistFragment" />
        <action
            android:id="@+id/action_mediaFragment_to_audioPlayerActivity"
            app:destination="@id/audioPlayerFragment" />
        <action
            android:id="@+id/action_mediaFragment_to_playlistFragment"
            app:destination="@id/playlistFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.playlistmaker.search.ui.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_audioPlayerActivity"
            app:destination="@id/audioPlayerFragment" />
    </fragment>

    <fragment
        android:id="@+id/audioPlayerFragment"
        android:name="com.example.playlistmaker.audioplayer.ui.AudioPlayerFragment"
        android:label="AudioPlayerFragment"
        tools:layout="@layout/fragment_audioplayer">
        <action
            android:id="@+id/action_audioPlayerActivity_to_addPlaylistFragment"
            app:destination="@id/addPlaylistFragment" />
        <argument android:name="audioArgs" app:argType="com.example.playlistmaker.search.domain.model.Track"/>
    </fragment>

    <fragment
        android:id="@+id/addPlaylistFragment"
        android:name="com.example.playlistmaker.media.ui.fragments.AddPlaylistFragment"
        android:label="AddPlaylistFragment"
        tools:layout="@layout/fragment_add_playlist"/>

    <fragment
        android:id="@+id/playlistFragment"
        android:name="com.example.playlistmaker.media.ui.fragments.PlaylistFragment"
        android:label="PlaylistFragment"
        tools:layout="@layout/fragment_playlist">
        <action
            android:id="@+id/action_playlistFragment_to_addPlaylistFragment"
            app:destination="@id/addPlaylistFragment" />
        <argument android:name="playlist" app:argType="com.example.playlistmaker.media.domain.model.Playlist"/>
        <action
            android:id="@+id/action_playlistFragment_to_audioPlayerFragment"
            app:destination="@id/audioPlayerFragment" />
    </fragment>

</navigation>